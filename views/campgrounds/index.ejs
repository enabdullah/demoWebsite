<% layout('layouts/boilerplate') %>



<div id="clusterMap" style="height: 500px; width: 100%; margin-bottom: 20px;"></div>
<h1>All Campgrounds</h1>
<!-- 
<div>
    <a href="/campgrounds/new">Add New Campground</a>
