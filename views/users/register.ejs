
  <% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center mt-5">
    <div class="row">
    <div class="col-md-6 offset-md-4 col-xl-4 offset-xl-4">
    <div class="card shadow">
      <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />
      <div class="card-body">
        <h5 class="card-title">Register User</h5>
        <form action="/register" method="post" class="needs-validation" novalidate>
          <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input placeholder="Enter Your Username" class="form-control" id="username" type="text" name="username" required>
            <div class="valid-feedback">Looks Good!!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input placeholder="Enter Your Email" class="form-control" id="email" type="email" name="email" required>
            <div class="valid-feedback">Looks Good!!</div>
          </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input placeholder="Enter Your Password" class="form-control" id="password" type="password" name="password" required>
              <div class="valid-feedback">Looks Good!!</div>
            </div>
          <div class="d-grid gap-2 mb-3">
            <button class="btn btn-success">Register</button>
          </div>
          <div class="d-grid gap-2">
              <a class="btn btn-primary" href="/login">Login User</a>
            </div>
        </form>
      </div>
    </div>
    </div>
  </div>
</div>









